@model Client.ViewModels.PurchaseViewModel

@{
    ViewBag.Title = "Index";
    var x = 1;
}

<!-- Content Header -->
<section class="content-header">
    <h1>
        Welcome
    </h1>
    <ol class="breadcrumb pull-left">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Examples</a></li>
        <li class="active">Blank page</li>

    </ol>


</section>

<!-- Main content -->
<section class="content">
    <div class="box">
        <div class="box-header with-border">
            <a href="@Url.Action("Create", "Purchase")" class="btn btn-primary btn-sm pull-right" data-modal=""><i style="color: red;" class="fa fa-plus"></i> Add</a>
        </div>
        <div class="box-body">
            <table id="myTable" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                            ID
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            Date
                        </th>
                        <th>
                            Price
                        </th>
                        <th>
                            Quantity
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var purchase in ViewBag.PurchaseList)
                    {
                        <tr>
                            <td>
                                @(x++)
                            </td>
                            <td>
                                @purchase.PurchaseProduct
                            </td>
                            <td>
                                @purchase.Date
                            </td>
                            <td>
                                @purchase.Price
                            </td>
                            <td>
                                @purchase.Quantity
                            </td>
                            <td>
                                <a href="@Url.Action("Delete", "Purchase", new { id = purchase.Id })">Delete</a>
                                |
                                <a href="@Url.Action("Edit", "Purchase", new { id = purchase.Id })">Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
