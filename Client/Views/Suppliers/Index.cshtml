 @model Client.ViewModels.SupplierViewModel

@{
    ViewBag.Title = "Index";
    var x = 1;
}

<!-- Content Header -->
<section class="content-header">
    <h1>
        Welcome
    </h1>
    <ol class="breadcrumb pull-left">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Examples</a></li>
        <li class="active">Blank page</li>

    </ol>


</section>
<!-- Main content -->
<section class="content">
    <div class="box">
        <div class="box-header with-border">
            <a href="@Url.Action("Create", "Suppliers")" class="btn btn-primary btn-sm pull-right" data-modal=""><i style="color: red;" class="fa fa-plus"></i> Add</a>
        </div>
        <div class="box-body">
            <table id="myTable" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                            ID
                        </th>
                        <th>
                            Name
                        <th>
                            Contact
                        </th>
                        <th>
                            Address
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                   @foreach (var supplier in ViewBag.SupplierList)
                   {
                    <tr>
                        <td>
                            @(x++)
                        </td>
                        <td>
                            @supplier.Name
                        </td>
                        <td>
                            @supplier.Contact
                        </td>
                        <td>
                            @supplier.Address
                        </td>
                        <td>
                            <a href="@Url.Action("Delete", "Suppliers", new { id = supplier.ID })">Delete</a>
                            |
                            <a href="@Url.Action("Edit", "Suppliers", new { id = supplier.ID })">Edit</a>
                        </td>
                    </tr>
                   }
                </tbody>
            </table>
        </div>
    </div>
</section>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript" src="~/Scripts/modal.js"></script>
    <script type="text/javascript" src="~/Scripts/delete-modal.js"></script>
    <script>
            $(document).ready(function () {
                $('#grid').DataTable({
                    columnDefs: [
                        {
                            targets: [0, 1, 2, 3, 4],
                            className: 'dataTable'
                        }
                    ]
                });
            });
    </script>
}
