@model Client.ViewModels.CategoryViewModel

@{
    ViewBag.Title = "Index";
    var x = 1;
}

<!-- Content Header -->
<section class="content-header">
   <h1>
       Welcome
   </h1>
        <ol class="breadcrumb pull-left">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Examples</a></li>
            <li class="active">Blank page</li>
            
        </ol>
       

</section>

<!-- Main content -->
<section class="content">
    <div class="box">
        <div class="box-header with-border">
            <a href="@Url.Action("Create", "Category")" class="btn btn-primary btn-sm pull-right" data-modal=""><i style="color: red;" class="fa fa-plus"></i> Add</a>
        </div>
        <div class="box-body">
            <table id="myTable" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                            ID
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in ViewBag.CategoryList)
                    {
                        <tr>
                            <td>
                                @(x++)
                            </td>
                            <td>
                                @category.CategoryName
                            </td>
                            <td>
                                <a href="@Url.Action("Delete", "Category", new { id = category.Id })">Delete</a>
                                |
                                <a href="@Url.Action("Edit", "Category", new { id = category.Id })">Edit</a>
                                |
                                <a href="@Url.Action("Index", "Product", new { id = category.Id})">Products</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>