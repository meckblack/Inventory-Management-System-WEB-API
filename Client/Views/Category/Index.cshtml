@model Client.ViewModels.CategoryViewModel

@{
    ViewBag.Title = "Index";
    var x = 1;
}

<h2>Index</h2>

<a href="@Url.Action("Create", "Category")">Add</a>
<br /><br />
<table>
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                @Html.DisplayFor(model => model.category.CategoryName)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in ViewBag.CategoryList)
        {
            <tr>
                <td>
                    @(x++)
                </td>
                <td>
                    @category.CategoryName
                </td>
                <td>
                    <a href="@Url.Action("Delete", "Category", new { id = category.Id })">Delete</a>
                    |
                    <a href="@Url.Action("Edit", "Category", new { id = category.Id })">Edit</a>
                    |
                    <a href="@Url.Action("Index", "Product", new { id = category.Id})">Products</a>
                </td>
            </tr>
        }
    </tbody>
</table>